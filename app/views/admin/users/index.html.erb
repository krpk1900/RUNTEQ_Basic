<% content_for(:title, t('.title')) %>

<!-- 検索フォーム -->
<%= render 'search_form', url: admin_users_path %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col"><%= User.human_attribute_name :full_name %></th>
      <th scope="col"><%= User.human_attribute_name :role %></th>
      <th scope="col"><%= User.human_attribute_name :created_at %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.decorate.full_name, admin_user_path(user) %></td>
        <td><%= user.role_i18n %></td>
        <td><%= l user.created_at, format: :short %></td>
        <td><%= link_to t('defaults.edit'), edit_admin_user_path(user), class: "btn btn-success" %></td>
        <td><%= link_to t('defaults.delete'), admin_user_path(user), method: :delete, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>