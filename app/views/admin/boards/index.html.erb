<% content_for(:title, t('.title')) %>

<!-- 検索フォーム -->
<%= render 'search_form', url: admin_boards_path %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col"><%= Board.human_attribute_name :title %></th>
      <th scope="col">作成者</th>
      <th scope="col"><%= Board.human_attribute_name :created_at %></th>
    </tr>
  </thead>
  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.id %></td>
        <td><%= link_to board.title, admin_board_path(board) %></td>
        <td><%= board.user.decorate.full_name %></td>
        <td><%= l board.created_at, format: :short %></td>
        <td><%= link_to t('defaults.edit'), edit_admin_board_path(board), class: "btn btn-success" %></td>
        <td><%= link_to t('defaults.delete'), admin_board_path(board), method: :delete, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>