<% content_for(:title, t('.title')) %>
<h1><%= t '.title' %></h1>
<%= render 'shared/error_messages', { object: @user } %>
<%= link_to '編集', edit_profile_path, class: "btn btn-success" %>
<table>
  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <th>氏名</th>
    <td><%= @user.decorate.full_name %></td>
  </tr>
  <tr>
    <th>アバター</th>
    <td>
      <%= image_tag @user.avatar.url, class: 'rounded-circle mr15', width: '40', height: '40' %>
  </tr>
</table>