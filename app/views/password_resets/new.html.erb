<% content_for(:title, t('.title')) %>
<h1><%= t('.title') %></h1>
<%= form_with url: password_resets_path, local: true do |f| %>
  <div class="field">
    <%= f.label :email, t(User.human_attribute_name(:email)) %>
    <%= f.email_field :email %>
    <%= f.submit t('defaults.submit'), class:'btn btn-primary' %>
  </div>
<% end %>
